.row
  .col-md-3
    - if policy(task).list_solutions?
      .back
        = btn_to course_task_solutions_path(task.course, task) do
          = icon 'arrow-left', 'Wróć do listy rozwiązań'

    - if policy(solution).destroy?
      .delete
        = btn_to solution_path(solution), method: :delete do
          = icon 'trash', 'Usuń rozwiązanie'

  .col-md-9
    = render 'task_and_solution'
    = simple_form_for solution do |f|
      = f.error_notification
      = f.input :earned_points, input_html: { min: 0, max: task.points, value: 0 },
        label: "Uzyskane punkty (0 - #{task.points})", required: true, autofocus: true
      = f.button :submit
