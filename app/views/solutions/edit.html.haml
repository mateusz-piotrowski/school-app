.row
  .col-md-3
    .back
      = link_to solutions_course_task_path(task.course, task), class: 'btn btn-default' do
        %i.fa.fa-arrow-left
        Wróć do listy rozwiązań
    .delete
      = link_to solution_path(solution), method: :delete, class: 'btn btn-default' do
        %i.fa.fa-trash
        Usuń rozwiązanie

  .col-md-9
    = render 'task_and_solution'
    = form_for solution do |f|
      = render 'shared/error_messages', object: f.object
      .field
        = f.label :earned_points, "Uzyskane punkty (0 - #{task.points})"
        = f.number_field :earned_points, min: 0, max: task.points, value: 0
      = f.submit 'Oceń', class: 'btn btn-primary'
