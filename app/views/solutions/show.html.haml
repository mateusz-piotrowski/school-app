.row
  .col-md-3
    - if policy(task).list_solutions?
      .back
        = link_to course_task_solutions_path(task.course, task), class: 'btn btn-default' do
          = icon 'arrow-left', 'Wróć do listy rozwiązań'

    - if current_user.teacher?
      .delete
        = link_to solution_path(solution), method: :delete, class: 'btn btn-default' do
          = icon 'trash', 'Usuń rozwiązanie'

    - if policy(task.course).list_tasks?
      = link_to course_tasks_path(task.course), class: 'btn btn-default' do
        = icon 'arrow-left', 'Wróć do listy zadań'

  .col-md-9
    = render 'task_and_solution'
    %h3 Uzyskane punkty
    .points= solution.earned_points_formatted
