.row
  .col-md-3
    - if policy(course).show?
      .back
        = btn_to course do
          = icon 'arrow-left', 'Wróć do kursu'

    - if policy(Lecture.new(course: course)).new?
      .add
        = btn_to new_course_lecture_path(course), context: :primary do
          = icon 'plus', 'Dodaj wykład'

  .col-md-9
    %h1= course.name
    %h2 Wykłady
    %ul.lectures= render lectures
