.row
  .col-md-3
    - if policy(course).list_tasks?
      = link_to course_tasks_path(course), class: 'btn btn-default' do
        = icon 'arrow-left', 'Wróć'

  .col-md-9
    %h1= course.name
    %h2 Utwórz nowe zadanie
    = simple_form_for [course, task] do |f|
      = render 'fields', f: f
      = f.button :submit, 'Utwórz zadanie'
