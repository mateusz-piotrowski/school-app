- content_for :sidebar do
  - if policy(course).list_tasks?
    .back= link_to t('.back_to_tasks'), course_tasks_path(course)

  - if policy(task).edit?
    .edit= link_to t(:edit), edit_course_task_path(course, task)

  - if policy(task).list_solutions?
    .solutions= link_to t('.solutions'), course_task_solutions_path(course, task)
    .avg-score
      = t '.average_score'
      = task.average_score

  .points
    = t '.points_to_earn'
    = task.points

%h1= course.name
%h2= task.title
.desc= task.description_formatted
= render 'solution' if current_user.enrolled_in? course
