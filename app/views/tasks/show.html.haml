- content_for :sidebar do
  - if policy(course).list_tasks?
    .back
      = btn_to course_tasks_path(course) do
        = icon 'arrow-left', t('.back_to_tasks')

  - if policy(task).edit?
    .edit
      = btn_to edit_course_task_path(course, task) do
        = icon 'edit', t(:edit)

  - if policy(task).list_solutions?
    .solutions
      = btn_to course_task_solutions_path(course, task) do
        = t '.solutions'
    .avg-score
      = t '.average_score'
      = task.average_score

  .points
    = t '.points_to_earn'
    = task.points

%h1= course.name
%h2= task.title
.desc= task.description_formatted
= render 'solution' if current_user.enrolled_in? course
