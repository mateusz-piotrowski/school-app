%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to root_path, id: 'logo', class: 'navbar-brand' do
      = icon 'graduation-cap', 'e-kursy'
    %ul.nav.navbar-nav.navbar-right
      - if signed_in?
        %li= link_to 'Moje kursy', root_path
      %li= link_to 'Kursy', courses_path
      - if signed_in?
        %li.dropdown
          %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' } }
            = current_user.name
            %i.caret
          %ul.dropdown-menu
            %li
              = link_to current_user do
                = icon 'user', 'MÃ³j profil'
            %li
              = link_to edit_user_registration_path do
                = icon 'cogs', 'Ustawienia'
            %li.divider
            %li
              = link_to destroy_user_session_path, method: :delete do
                = icon 'sign-out', 'Wyloguj'
      - else
        %li= link_to 'Zaloguj', new_user_session_path
