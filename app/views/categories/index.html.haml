.row
  .col-md-3
    - if policy(Course).index?
      = btn_to courses_path do
        = icon 'arrow-left', t('.back_to_courses')

  .col-md-9
    %h1= t '.title'

    - if policy(Category).new?
      = btn_to new_category_path, context: :primary do
        = icon 'plus', t('.add_category')

    %ul= render categories
