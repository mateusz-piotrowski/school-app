.row
  .col-md-3
    .delete
      = link_to user_path(user), method: :delete, class: 'btn btn-default' do
        %i.fa.fa-trash
        Usuń

  .col-md-9
    %h1 Edytuj mój profil
    = simple_form_for user do |f|
      = render 'fields', f: f
      = f.button :submit, 'Zapisz zmiany', class: 'btn-primary'

    - unless user.teacher?
      .upgrade
        - if user.requesting_upgrade?
          .alert.alert-info Twój wniosek o rozszerzenie uprawnień czeka na akceptację
        - else
          Jeśli chcesz tworzyć własne kursy, złóż wniosek o
          = link_to 'rozszerzenie uprawnień', upgrades_path, method: :post
