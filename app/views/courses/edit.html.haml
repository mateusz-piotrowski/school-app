.row
  .col-md-3
    .back
      = link_to @course, class: 'btn btn-default' do
        %i.fa.fa-arrow-left
        Wróć
    .delete
      = link_to course_path(@course), method: :delete, class: 'btn btn-default' do
        %i.fa.fa-trash
        Usuń kurs

  .col-md-9
    %h1 Edytuj kurs
    = form_for @course do |f|
      = render 'fields', f: f
      = f.submit 'Zapisz zmiany', class: 'btn btn-primary'
