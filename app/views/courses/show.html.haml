.row
  .col-md-3
    - if policy(course).edit?
      = link_to edit_course_path(course), class: 'btn btn-default' do
        = icon 'edit', 'Edytuj'

    - if signed_in?
      - if current_user? course.teacher
        = link_to course_students_path(course), class: 'btn btn-default' do
          = icon 'group', 'Zapisani studenci'
      - elsif !current_user.enrolled_in? course
        .enroll= button_to 'Zapisz się', course_students_path(course), class: 'btn btn-primary'

    - if policy(course).list_lectures?
      = link_to course_lectures_path(course), class: 'btn btn-default' do
        = icon 'file-text', 'Wykłady'

    - if policy(course).list_tasks?
      = link_to course_tasks_path(course), class: 'btn btn-default' do
        = icon 'tasks', 'Zadania'

  .col-md-9
    %h1= course.name
    .teacher
      %i= link_to_if policy(course.teacher).show?, course.teacher.name, course.teacher

    .desc= course.description_formatted
